<section class="row m-b-md">
  <div class="col-sm-12">
  <h3><span class="glyphicon glyphicon-transfer" aria-hidden="true"></span> Transactions (for <strong>Block</strong> <%= number_with_delimiter(@block['data']['nb'], delimiter: ',') %>)</h3>
  <% @txs['data']['txs'].each do |tx| %>
    <% if tx['is_coinbased'] === 1 %>
    <div class="panel panel-success">
    <% else %>
    <div class="panel panel-default">
      <% end %>
      <div class="panel-heading">
        <h3 class="panel-title">
          <span class="glyphicon glyphicon-transfer" aria-hidden="true"></span> 
          <%= link_to tx['tx'], transaction_path(tx['tx']) %>
        </h3>
      </div>
      <div class="panel-body">
        <section class="row m-b-md">
          <div class="col-sm-6">
            <% if tx['is_coinbased'] === 1 %>
              <span class="label label-success">Newly Generated Coins</span>
            <% else %>
            <h4>Input Address(es)</h4>
            <section class="panel panel-default">
              <div class="table-responsive">
                <table class="table table-striped">
                  <tbody>
                    <% tx['trade']['vins'].each do |address| %>
                    <tr>
                      <td><span class='glyphicon glyphicon-qrcode' aria-hidden='true'></span> <%= link_to address['address'], address_path(address['address']) %></td>
                      <td class='text-danger'>
                        <span class='btc' title='<%= number_to_currency(@exchange_rate * address["amount"]) %>'><span class='glyphicon glyphicon-bitcoin' aria-hidden='true'></span> <%= number_with_delimiter(number_with_precision(address['amount'], precision: 8), delimiter: ',') %></span>
                        <span class='usd hide' title='<%= number_with_delimiter(number_with_precision(address["amount"], precision: 8), delimiter: ",") %> BTC'><span class='glyphicon glyphicon-usd' aria-hidden='true'></span><%= number_with_delimiter(number_with_precision(@exchange_rate * address["amount"], precision: 2), delimiter: ',') %></span>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </section>
            <% end %>
          </div>
          <div class="col-sm-6">
            <h4>Output Address(es)</h4>
            <section class="panel panel-default">
              <div class="table-responsive">
                <table class="table table-striped">
                  <tbody>
                    <% transaction_sum = 0 %>
                    <% tx['trade']['vouts'].each do |address| %>
                        <% transaction_sum += address['amount'] %>
                        <tr>
                          <td><span class='glyphicon glyphicon-qrcode' aria-hidden='true'></span> <%= link_to address['address'], address_path(address['address']) %></td>
                          <td class='text-success'>
                            
                            <span class='btc' title='<%= number_to_currency(@exchange_rate * address["amount"]) %>'><span class='glyphicon glyphicon-bitcoin' aria-hidden='true'></span> <%= number_with_delimiter(number_with_precision(address['amount'], precision: 8), delimiter: ',') %></span>
                            <span class='usd hide' title='<%= number_with_delimiter(number_with_precision(address["amount"], precision: 8), delimiter: ",") %> BTC'><span class='hide usd glyphicon glyphicon-usd' aria-hidden='true'></span><%= number_with_delimiter(number_with_precision(@exchange_rate * address["amount"], precision: 2), delimiter: ',') %></span>
                          </td>
                        </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </section>
          </div>
        </section>
      </div>
      <div class="panel-footer">
        <section class="row m-b-md">
          <div class="col-sm-6">
            <p><span class='glyphicon glyphicon-remove' aria-hidden='true'></span> Days Destroyed: <%= number_with_delimiter(tx['days_destroyed'], delimiter: ',') %></p>
                            
          </div>
          <div class="col-sm-6">
            <p>
              <span class='btc glyphicon glyphicon-bitcoin' aria-hidden='true'></span>
              <span class='hide usd glyphicon glyphicon-usd' aria-hidden='true'></span>
              Fee: 
              <span class='btc' title='<%= number_to_currency(@exchange_rate * tx["fee"].to_f) %>'><%= number_with_delimiter(number_with_precision(tx['fee'], precision: 8), delimiter: ',') %></span>
              <span class='usd hide' title='<%= number_with_delimiter(number_with_precision(tx["fee"], precision: 8), delimiter: ",") %>'><%= number_with_delimiter(number_with_precision(@exchange_rate * tx["fee"].to_f, precision: 2), delimiter: ',') %></span>
            </p>
            <p class='currency'>
              <span class='btc glyphicon glyphicon-bitcoin' aria-hidden='true'></span>
              <span class='hide usd glyphicon glyphicon-usd' aria-hidden='true'></span>
              Transaction Sum: 
              <span class='btc' title='<%= number_to_currency(@exchange_rate * transaction_sum + tx["fee"].to_f) %>'><%= number_with_delimiter(number_with_precision(transaction_sum + tx['fee'].to_f, precision: 8), delimiter: ',') %></span>
              <span class='usd hide' title='<%= number_with_delimiter(number_with_precision(transaction_sum + tx["fee"].to_f, precision: 8), delimiter: ",") %> BTC'><%= number_with_delimiter(number_with_precision(@exchange_rate * transaction_sum + tx["fee"].to_f, precision: 2), delimiter: ',') %></span>
            </p>
          </div>
        </section>
      </div>
    </div>
    <% end %>
  </div>
</section>
