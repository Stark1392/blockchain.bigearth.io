<div class='hero'>
  <div class='container'>
    <section class='row m-b-md'>
        <div class='col-sm-12'>
          <h2><span class='glyphicon glyphicon-user' aria-hidden='true'></span> Profile <strong><%= @user.email %></strong></h2>
          <%= render 'shared/breadcrumb' %>
          <%= render 'shared/social_media' %>
        </div>
    </section>
  </div>
</div>
<div class='sub'>
  <section class='container'>
    <section class='row m-b-md'>
        <div class='col-md-6'>
          <p>
            <strong>First name (optional):</strong>
            <%= @user.first_name %>
          </p>
          <p>
            <strong>Last name (optional):</strong>
            <%= @user.last_name %>
          </p>
          <p>
            <strong>Phone Number (optional):</strong>
            <%= @user.phone_number %>
          </p>
          <p>
            <strong>Location (optional):</strong>
            <%= @user.location %>
          </p>
          <p>
            <strong>Company (optional):</strong>
            <%= @user.company %>
          </p>
          <p>
            <strong>Email address (optional):</strong>
            <%= @user.email %>
          </p>
          <p>
            <strong>2 Factor Auth Enabled (optional):</strong>
            <%= @user.authy_enabled %>
          </p>
          <div class='btn-group btn-group-justified' role='group' aria-label='Justified button group'> 
            <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-default' %>
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
            <%= link_to 'Create Chain', new_user_chain_path(@user), class: 'btn btn-success' %>
            <%= link_to 'Delete Account', @user, method: :delete, data: { confirm: "Permanently delete your account? We really hate to see you go." }, class: 'btn btn-danger' %>
          </div>
        </div>
        <div class='col-md-6'>
          <h3>Chains</h3>
          <ul>
            <% @user.chains.each do |chain| %>
              <li><%= link_to chain.title, user_chain_path(@user, chain) %> | <%= link_to 'delete', [@user, chain], method: :delete, data: { confirm: "Permanently delete Chain '#{chain.title}'? This action is undoable." } %></li>
            <% end %>
          </ul>
        </div>
    </section>
  </div>
</div>
