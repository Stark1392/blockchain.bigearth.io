<section class="panel panel-default">
    <div class="table-responsive">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>Hash</td>
                    <td><%= @address['data']['address'] %></td>
                </tr>
                <tr>
                    <td>Balance</td>
                    <td title='<%= number_to_currency(@value * @address['data']['balance']) %>'><%= number_with_delimiter(number_with_precision(@address['data']['balance'], precision: 8), delimiter: ',') %> BTC</td>
                </tr>
                <tr>
                    <td>Total Received</td>
                    <td title='<%= number_to_currency(@value * @address['data']['totalreceived']) %>'><%= number_with_delimiter(number_with_precision(@address['data']['totalreceived'], precision: 8), delimiter: ',') %> BTC</td>
                </tr>
                <tr>
                    <td>Total # of Transactions</td>
                    <td><%= number_with_delimiter(@address['data']['nb_txs'], delimiter: ',')  %></td>
                </tr>
            </tbody>
        </table>
    </div>
</section>
