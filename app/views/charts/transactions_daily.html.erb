<div class='hero'>
  <div class='container'>
    <section class="row m-b-md">
        <div class="col-sm-12">
          <h2><span class='glyphicon glyphicon-dashboard' aria-hidden='true'></span> Bitcoin <strong>Charts</strong></h2>
          <%= render 'shared/breadcrumb' %>
          <%= render 'shared/social_media' %>
        </div>
    </section>
  </div>
</div>
<div class='sub'>
  <section id='data' class='container' data-transactions_daily='<%= @transactions_daily.to_json %>'>
    <div id='transactions_daily_chart'></div>
  </section>
</div>
<script>
window.onload = function() {
  'use strict';  
  google.charts.setOnLoadCallback(draw_transactions_daily_chart);

  function draw_transactions_daily_chart() {
    var data = new google.visualization.DataTable();
    data.addColumn('string', 'Time');
    data.addColumn('number', 'Total');
    data.addRows(JSON.parse(document.getElementById('data').dataset.transactions_daily));

    var options = {
      title: 'Number of Transactions per day',
      height: 400,
      colors: ['#0f5288'],
      chartArea: {
        width: '90%',
        height: '80%',
        left: 75,
        right: 25
      },
      hAxis: {
        gridlines: {
          color: 'transparent'
        }
      },
      vAxis: {
        title: 'Number of Transactions',
        format: 'short'
      },
      legend: {
        position: 'none'
      }
    };

    var chart = new google.visualization.LineChart(document.getElementById('transactions_daily_chart'));
    resize(function () {
      chart.draw(data, options);
    });
  }
};
</script>
