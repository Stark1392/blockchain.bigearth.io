<div class='parent_folder' data-child_folder='control'>
  <section class='row'>
    <div class='col-md-2 text-center'>
      <span class='glyphicon glyphicon-folder-close' aria-hidden='true'></span>
    </div>
    <div class='col-md-10'>
      <h4>Control</h4>
      <p>4 Requests</p>
    </div>
  </section>
</div>

<ul id='control' class='hide requests'>
  <li>
    <%= link_to '#' do %>
    <section class='row'>
      <div class='col-md-2 text-center'>
        POST
      </div>
      <div class='col-md-10'>
        <code>start</code>
      </div>
    </section>
    <% end %>
  </li>
  <li>
    <%= link_to '#' do %>
    <section class='row'>
      <div class='col-md-2 text-center'>
        POST
      </div>
      <div class='col-md-10'>
        <code>stop</code>
      </div>
    </section>
    <% end %>
  </li>
  <li>
    <%= link_to '#' do %>
    <section class='row'>
      <div class='col-md-2 text-center'>
        GET
      </div>
      <div class='col-md-10'>
        <code>getinfo</code>
      </div>
    </section>
    <% end %>
  </li>
  <li>
    <%= link_to [@user, @chain], method: :delete, data: { confirm: "Permanently delete Chain '#{@chain.title}'? This action is undoable." } do %>
      <section class='row'>
        <div class='col-md-2 text-center'>
          DELETE
        </div>
        <div class='col-md-10'>
          <span class='glyphicon glyphicon-remove' aria-hidden='true'></span> Destroy
          <code></code>
        </div>
      </section>
    <% end %>
  </li>
</ul>
