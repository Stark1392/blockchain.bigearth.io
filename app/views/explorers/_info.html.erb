<section class="row m-b-md">
    <div class="col-sm-12">
        <p>$<%= number_with_delimiter(number_with_precision(@coin_info['data']['markets']['coinbase']['value'], precision: 2), delimiter: ',') %> per coin</p>
        <p><%= "#{number_with_delimiter(@coin_info['data']['volume']['current'], delimiter: ',')} / #{number_with_delimiter(@coin_info['data']['volume']['all'], delimiter: ',')} mined" %></p>
        <p><%= number_with_precision(@coin_info['data']['volume']['perc'], precision: 2) %>% of total coins</p>
    </div>
</section>
