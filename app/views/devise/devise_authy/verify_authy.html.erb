<div class='hero'>
  <div class='container'>
    <section class='row m-b-md'>
        <div class='col-sm-12'>
          <h2><span class='glyphicon glyphicon-lock' aria-hidden='true'></span> Register <strong>2 Factor Auth</strong></h2>
          <%= I18n.t('authy_register_title', {scope: 'devise'}) %>
          <%= render 'shared/breadcrumb' %>
          <%= render 'shared/social_media' %>
        </div>
    </section>
  </div>
</div>
<div class='sub'>
  <section class='container form-horizontal'>
    <%= verify_authy_form do %>
      <legend><%= I18n.t('submit_token_title', {scope: 'devise'}) %></legend>
      <%= label_tag :token %>
      <%= text_field_tag :token, "", autocomplete: :off, id: 'authy-token', autofocus: true %>
      <label>
        <%= check_box_tag :remember_device %>
        <span><%= I18n.t('remember_device', {scope: 'devise'}) %></span>
      </label>

      <!-- Help tooltip -->
      <!-- You need to configure a help message. -->
      <!-- See documentation: https://github.com/authy/authy-form-helpers#help-tooltip -->
      <!-- <%= link_to '?', '#', id: 'authy-help' %> -->

      <%= authy_request_sms_link %>
      <%= submit_tag I18n.t('submit_token', {scope: 'devise'}), class: 'btn' %>
    <% end %>
  </section>
</div>
  
